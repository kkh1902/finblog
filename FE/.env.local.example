# Backend Configuration
# Choose one of the following backends:
# FastAPI: http://localhost:8001
# Flask: http://localhost:8002  
# Django: http://localhost:8003
NEXT_PUBLIC_API_URL=http://localhost:8001

# Backend Type (fastapi, flask, django)
NEXT_PUBLIC_BACKEND_TYPE=fastapi

# JWT Secret (for client-side validation if needed)
NEXT_PUBLIC_JWT_SECRET=your-jwt-secret-key

# App Configuration
NEXT_PUBLIC_APP_NAME=FinBoard
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Feature Flags
NEXT_PUBLIC_ENABLE_COMMENTS=true
NEXT_PUBLIC_ENABLE_BOOKMARKS=true
NEXT_PUBLIC_ENABLE_LIKES=true
NEXT_PUBLIC_ENABLE_TAGS=true

# External Services (Optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_SENTRY_DSN=

# Development
NODE_ENV=development